<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="horizontal"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/tekSatirlayout">

    <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp" app:srcCompat="@drawable/akrep8"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/imgBurcSembol"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvBurcAdi" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgBurcSembol" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgBurcSembol" android:textSize="18sp"
            android:typeface="sans"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvBurcTarih" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="11dp"
            app:layout_constraintStart_toEndOf="@+id/imgBurcSembol" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvBurcAdi"
            app:layout_constraintBottom_toBottomOf="@+id/imgBurcSembol" android:textSize="14sp"
            android:textStyle="italic"/>
</android.support.constraint.ConstraintLayout>